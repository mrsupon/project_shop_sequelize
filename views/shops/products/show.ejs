<%- include('../../layouts/head.ejs') %>
</head>

<body style="background-color: rgb(241, 245, 249);">
    <%- include('../../layouts/navigation.ejs') %>
          
    <div class="container ">    
        <div class="row justify-content-center">
            <!-- Simple card -->
            <div class="card col-md-6 shadow-none col-lg-4 col-xl-3 border-0 my-2 bg-transparent" >
                <div class="card-header shadow bg-white">
                    <h4 class="card-title text-center  "><%= products.title %></h4>
                    <div class="row justify-content-center">
                        <img class="img-fluid" shadow src="<%= products.imageUrl %>" alt="<%= products.title %>">              
                    </div>
                </div>
                <div class="card-body shadow bg-white">  
                    <h4 class=" card-title text-center">$<%= parseFloat(products.price).toFixed(2) %></h4>
                    <p class="card-text"><%= products.description %></p>
                </div>
                <div class="card-footer shadow bg-white mt-auto d-inline-flex justify-content-center">
                        <form action="/shops/carts" method="post" >
                            <input type="hidden" name="productId" value="<%= products.id  %>" >
                            <button type="submit" class="btn btn-primary mx-1 waves-effect waves-light"  >Add to Cart</button>
                        </form>
                </div>
            </div>         
        </div>   
    </div>

<%- include('../../layouts/end.ejs') %> 
