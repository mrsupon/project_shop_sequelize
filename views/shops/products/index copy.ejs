    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src=<%= product.imageUrl %> alt="A Book">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= parseFloat(product.price).toFixed(2) %></h2>
                            <p class="product__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions">
                            <button class="btn" onclick="(window.location.href='/shops/products/<%= product.id %>')"  >Details</button>
                            <form class="inline" action="/shops/carts" method="POST">
                                <input type="hidden" name="productId" value="<%= product.id  %>" >
                                <button class="btn" type="submit">Add to Cart</button>                                
                            </form>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
